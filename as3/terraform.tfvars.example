#!/usr/bin/env bash
set -e
address="${addr}"
username="${username}"
password="${pwd}"
port="${port}"
CREATE_VIP="${CREATE_VIP}"
UPDATE_CERT="${UPDATE_CERT}"
INSTALL_AS3="${INSTALL_AS3}"
echo "Installing RPM.... hold tight "
eval "$INSTALL_AS3"
sleep 40
echo " \033[0;32mCreating VIP on BIG-IP using generated AS3 JSON payload ... \033[0m"
sleep 10
eval "$CREATE_VIP"
n=1
while [ $n -le 500 ]
do
sleep 10
clear
echo "Updating Certificates on BIG-IP every 30 secs using generated CERT from Vault...."
eval "$UPDATE_CERT"
n=$(( n+1 ))
sleep 20
done

